#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
{
  "name": "${targetWebapp}",
  "description": "Sportello Scenario Configuration for ${targetWebapp}",

  "translate_instance_status": {
    "1": {"title": "Draft"},
    "2": {"title": "In Progress"},
    "3": {"title": "Completed"}
  },

  "translate_icons": {
    "home": {"icon": "it-home"},
    "list": {"icon": "it-list"}
  },

  "options": {
    "serviceTermsRequired": false
  },

  "scenarios": {
    "HOME": {
      "route": "/home",
      "title": "Home"
    },

    "LIST_EXAMPLE": {
      "title": "Example List",
      "breadcrumb": "Examples",
      "route": "examples",
      "component": "custom-grid",
      "roles": ["admin", "user"],
      "menu": {
        "home": {
          "order": "1",
          "title": "Examples",
          "icon": "it-list",
          "description": "Example list"
        }
      },
      "options": {
        "schema": "EXAMPLE_LIST",
        "title": "Example Items",
        "api": [
          {
            "method": "GET",
            "url": "api/examples"
          }
        ],
        "actions-row": {
          "items": [
            {
              "code": "detail",
              "title": "Details",
              "icon": "it-search",
              "action": {
                "type": "goto-page"
              },
              "goto-scenario": "EXAMPLE_DETAIL"
            }
          ]
        }
      }
    },

    "EXAMPLE_DETAIL": {
      "title": "Example Details",
      "route": "examples/detail",
      "component": "custom-form",
      "roles": ["admin", "user"],
      "options": {
        "schema": "EXAMPLE_FORM",
        "schema_mode": "update",
        "title": "View Example",
        "api": [
          {
            "operation": "data",
            "method": "GET",
            "url": "api/examples/<master_id>"
          }
        ],
        "actions-bottom": {
          "items": [
            {
              "code": "back",
              "title": "Back",
              "icon": "it-arrow-left-circle",
              "class": "btn-secondary",
              "action": {
                "type": "goto-page"
              },
              "goto-scenario": "LIST_EXAMPLE"
            }
          ]
        }
      }
    }
  }
}
