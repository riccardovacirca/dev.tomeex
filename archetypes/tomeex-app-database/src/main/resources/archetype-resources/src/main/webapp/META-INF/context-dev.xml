<?xml version="1.0" encoding="UTF-8"?>
<Context reloadable="true">
#if( $dbType == "postgres" )
    <Resource name="jdbc/${artifactId}"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20"
              maxIdle="5"
              maxWaitMillis="10000"
              username="${artifactId}"
              password="secret"
              driverClassName="org.postgresql.Driver"
              url="jdbc:postgresql://tomeex-postgres:5432/${artifactId}"/>
#elseif( $dbType == "mariadb" )
    <Resource name="jdbc/${artifactId}"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20"
              maxIdle="5"
              maxWaitMillis="10000"
              username="${artifactId}"
              password="secret"
              driverClassName="org.mariadb.jdbc.Driver"
              url="jdbc:mariadb://tomeex-mariadb:3306/${artifactId}"/>
#elseif( $dbType == "sqlite" )
    <Resource name="jdbc/${artifactId}"
              auth="Container"
              type="javax.sql.DataSource"
              maxTotal="20"
              maxIdle="5"
              maxWaitMillis="10000"
              username=""
              password=""
              driverClassName="org.sqlite.JDBC"
              url="jdbc:sqlite:/workspace/sqlite-data/${artifactId}.sqlite"/>
#end
</Context>
